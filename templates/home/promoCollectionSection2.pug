.promo-section.promo-section--right
  // Brand
  div(class="promo-section__brand-box")
    img(src="/img//products/collection-0-2.jpg", alt="Brand Image")
    div(class="promo-section__text")
      span Diva
      a.btn.btn-color.btn-color--primary(href="#")
        | Shop Now
        svg(xmlns="http://www.w3.org/2000/svg", fill="none", viewBox="0 0 24 24", stroke="currentColor", stroke-width="2")
          path(stroke-linecap="round", stroke-linejoin="round", d="M17 8l4 4m0 0l-4 4m4-4H3")
  // Products
  .products-display.products-display--vertical
    // Product 1
    .product.product--small.product--horizontal
      div(class="product__img-box")
        img(src="/img/products/collection-4.jpg", alt="Product 1")
      div(class="product__text-box")
        span(class="product__category-label") Clothes
        h3(class="btn btn-text btn-text--normal heading-tertiary product__name")
          | &quot;Some Serious Business&quot; Glasses
        div(class="product__prices")
          span(class="product__prices--prev") $25
          span(class="product__prices--current") $19.99