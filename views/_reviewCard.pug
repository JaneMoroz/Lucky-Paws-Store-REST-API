mixin reviewCard(review)
  li.review
    .stars
      each star in [1, 2, 3, 4, 5]
        svg(class=`stars__star stars__star--${review.rating >= star ? 'active' : 'inactive'}`, xmlns="http://www.w3.org/2000/svg", fill="none", viewBox="0 0 24 24", stroke="currentColor")
          path(stroke-linecap="round", stroke-linejoin="round", d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z")
    div(class="review__box")
      div(class="review__box-user")
        img(class="review__box-user-img", src=`${review.user.photo}`, alt=`${review.user.name}`)
        span(class="review__box-user-name")=review.user.name
      div(class="review__box-text")
        h3(class="heading-tertiary")=review.title
        p=review.review
