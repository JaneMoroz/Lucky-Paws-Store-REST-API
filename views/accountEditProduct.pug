extends base 
include _accountNav

block content
  .account
    +accountNavigation("ManageProducts")
    div(class="account__container")
      div(class="account__details")
        form.form.form--big.form--edit-product
          h1(class="form__title heading-primary--main") Edit Product
          div(class="form__group")
            input#productName(type="text", class="form__input", placeholder="Product Name", value=`${product.name}`, required)
          div(class="form__group")
            input#type(type="text", class="form__input", placeholder="Type", value=`${product.type}`, required)
          div(class="form__group")
            input#animal(type="text", class="form__input", placeholder="Animal", value=`${product.animal}`, required)
          div(class="form__group")
            input#brand(type="text", class="form__input", value=`${product.brand}`, placeholder="Brand")
          div(class="form__group")
            input#price(type="number", class="form__input", value=`${product.price}`, placeholder="Price", required)
          div(class="form__group")
            input#countInStock(type="number", class="form__input", value=`${product.countInStock}`, placeholder="Count in Stock", required)
          span Write colors, styles separated by coma:
          div(class="form__group")
            input#colors(type="text", class="form__input", value=`${product.color.join(", ")}`, placeholder="Colors")
          div(class="form__group")
            input#styles(type="text", class="form__input", value=`${product.style.join(", ")}`, placeholder="Styles")
          span Features:
          div(class="form__group")
            textarea#feature1(rows="2", class="form__textarea form__textarea--small", placeholder="Feature 1")=`${product.features[0] ? product.features[0] : ''}`
          div(class="form__group")
            textarea#feature2(rows="2", class="form__textarea form__textarea--small", placeholder="Feature 2")=`${product.features[1] ? product.features[1] : ''}`
          div(class="form__group")
            textarea#feature3(rows="2", class="form__textarea form__textarea--small", placeholder="Feature 3")=`${product.features[2] ? product.features[2] : ''}`
          div(class="form__group")
            textarea#feature4(rows="2", class="form__textarea form__textarea--small", placeholder="Feature 4")=`${product.features[3] ? product.features[3] : ''}`
          span Pictures:
          div(class="form__group")
            input#primaryImg(type="text", class="form__input", value=`${product.primaryImage}`, placeholder="Primary Image", required)
          div(class="form__group")
            input#otherImg1(type="text", class="form__input", value=`${product.otherImages[0] ? product.otherImages[0] : ""}`, placeholder="Other Image 1")
          div(class="form__group")
            input#otherImg2(type="text", class="form__input", value=`${product.otherImages[1] ? product.otherImages[1] : ""}`, placeholder="Other Image 2")
          div(class="form__group")
            input#otherImg3(type="text", class="form__input", value=`${product.otherImages[2] ? product.otherImages[2] : ""}`, placeholder="Other Image 3")
          div(class="form__group")
            button(class="btn btn-color btn-color--mixed btn--edit-product" data-productId=`${product.id}`) Edit Product